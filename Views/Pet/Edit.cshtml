@model ZooShop.Models.Pet

<h1>Edit Pet</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
    </div>

    <div class="form-group">
        <label for="Age">Age</label>
        <input type="number" class="form-control" id="Age" name="Age" value="@Model.Age" />
    </div>

    <div class="form-group">
        <label for="TypeId">Type</label>
        <select id="TypeId" name="TypeId" class="form-control">
            @foreach (var type in ViewData["PetTypes"] as IEnumerable<ZooShop.Models.PetType>)
            {
                <option value="@type.Id" 
                        selected=@(type.Id == Model.TypeId ? "selected" : "")>
                    @type.Name
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>