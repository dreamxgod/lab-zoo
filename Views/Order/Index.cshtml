@model IEnumerable<ZooShop.Models.Order>

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order Date</th>
            <th>Pet</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Placed</td>
                <td>@order.OrderItem.Name</td>
                <td>@order.Total</td>
                <td>
                    <a href="@Url.Action("Edit", "Order", new { id = order.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Order", new { id = order.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>